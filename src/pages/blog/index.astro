---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getBlogPosts, createSlug } from '../../lib/rss';
import { Calendar, ArrowRight } from 'lucide-astro';

const posts = await getBlogPosts();
---

<Layout title="Blog - JaimeGH">
	<Header />
	<main class="blog-page">
		<div class="blog-header">
			<h1 class="page-title">Blog</h1>
			<p class="page-subtitle">Artículos sobre desarrollo, tecnología y más</p>
		</div>

		<div class="blog-container">
			<div class="blog-grid">
				{posts.map(post => {
					const slug = createSlug(post.title);
					const date = new Date(post.pubDate).toLocaleDateString('es-ES', {
						year: 'numeric',
						month: 'long',
						day: 'numeric'
					});

					return (
						<article class="blog-card">
							<a href={`/blog/${slug}`} class="blog-link">
								<div class="blog-card-content">
									<div class="blog-meta">
										<Calendar size={16} />
										<time datetime={post.isoDate}>{date}</time>
									</div>
									<h3 class="blog-title">{post.title}</h3>
									<p class="blog-excerpt">{post.contentSnippet.slice(0, 180)}...</p>
									<div class="blog-read-more">
										<span>Leer más</span>
										<ArrowRight size={20} />
									</div>
								</div>
								<div class="blog-glow"></div>
							</a>
						</article>
					);
				})}
			</div>
		</div>
	</main>
</Layout>

<style>
	.blog-page {
		position: relative;
		z-index: 40;
		min-height: 100vh;
		padding: 12rem 2rem 6rem;
	}

	.blog-header {
		max-width: 1400px;
		margin: 0 auto 4rem;
		text-align: center;
	}

	.page-title {
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 300;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #888);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.page-title::after {
		content: '';
		position: absolute;
		bottom: -1rem;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 2px;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
	}

	.page-subtitle {
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.6);
		margin-top: 2rem;
	}

	.blog-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.blog-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.blog-card {
		position: relative;
		height: 100%;
	}

	.blog-link {
		display: block;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.blog-card-content {
		height: 100%;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		padding: 2rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
	}

	.blog-card-content::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.blog-card:hover .blog-card-content {
		transform: translateY(-8px);
		border-color: rgba(255, 255, 255, 0.3);
		box-shadow:
			0 0 30px rgba(255, 255, 255, 0.1),
			0 15px 50px rgba(0, 0, 0, 0.5);
	}

	.blog-card:hover .blog-card-content::before {
		opacity: 1;
	}

	.blog-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 150%;
		height: 150%;
		background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
		transform: translate(-50%, -50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.blog-card:hover .blog-glow {
		opacity: 1;
	}

	.blog-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: rgba(255, 255, 255, 0.5);
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.blog-title {
		font-size: 1.5rem;
		font-weight: 400;
		color: rgba(255, 255, 255, 0.9);
		margin-bottom: 1rem;
		line-height: 1.4;
	}

	.blog-excerpt {
		color: rgba(255, 255, 255, 0.6);
		line-height: 1.6;
		margin-bottom: 1.5rem;
		flex: 1;
	}

	.blog-read-more {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: rgba(255, 255, 255, 0.8);
		font-size: 1rem;
		transition: gap 0.3s ease;
	}

	.blog-card:hover .blog-read-more {
		gap: 1rem;
	}

	@media (max-width: 768px) {
		.blog-page {
			padding: 10rem 1.5rem 4rem;
		}

		.blog-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.blog-card-content {
			padding: 1.5rem;
		}

		.blog-title {
			font-size: 1.3rem;
		}
	}
</style>
