---
import { Mail, ArrowRight } from 'lucide-astro';

const contactMethods = [
	/*{
		name: 'Email',
		value: 'hello@jaimegh.com',
		Icon: Mail,
		link: 'mailto:hello@jaimegh.com',
		description: ''
	}*/
	{
		name: 'Email Inled',
		value: 'contacto@inled.es',
		Icon: Mail,
		link: 'contacto@inled.es',
		description: ''
	}
];
---

<section class="contact-section" id="contact">
	<div class="section-container">
		<h2 class="section-title">Contacto</h2>
		<p class="section-subtitle">Dentro de poco, correo con el dominio jaimegh.com, mientras tanto el de Inled</p>

		<div class="contact-methods">
			{contactMethods.map(method => (
				<a href={method.link} class="contact-card">
					<div class="contact-icon">
						<method.Icon size={48} />
					</div>
					<div class="contact-info">
						<h3 class="contact-name">{method.name}</h3>
						<p class="contact-value">{method.value}</p>
						<p class="contact-description">{method.description}</p>
					</div>
					<div class="contact-arrow">
						<ArrowRight size={24} />
					</div>
				</a>
			))}
		</div>
	</div>
</section>

<style>
	.contact-section {
		position: relative;
		z-index: 40;
		padding: 8rem 2rem;
		background: linear-gradient(180deg, rgba(5, 5, 5, 0.9) 0%, rgba(0, 0, 0, 0.5) 100%);
	}

	.section-container {
		max-width: 1000px;
		margin: 0 auto;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 300;
		text-align: center;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #888);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -1rem;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 2px;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.6);
		margin-bottom: 4rem;
	}

	.contact-methods {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.contact-card {
		display: flex;
		align-items: center;
		gap: 2rem;
		padding: 2.5rem;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		text-decoration: none;
		color: inherit;
		transition: all 0.4s ease;
		position: relative;
		overflow: hidden;
	}

	.contact-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.contact-card:hover {
		transform: translateX(10px);
		border-color: rgba(255, 255, 255, 0.3);
		box-shadow: 0 0 40px rgba(255, 255, 255, 0.15);
	}

	.contact-card:hover::before {
		opacity: 1;
	}

	.contact-icon {
		color: rgba(255, 255, 255, 0.9);
		filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
		transition: all 0.3s ease;
	}

	.contact-card:hover .contact-icon {
		transform: scale(1.1);
		filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.4));
	}

	.contact-info {
		flex: 1;
	}

	.contact-name {
		font-size: 1.5rem;
		font-weight: 400;
		margin-bottom: 0.5rem;
		color: rgba(255, 255, 255, 0.95);
	}

	.contact-value {
		font-size: 1.1rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 0.5rem;
	}

	.contact-description {
		font-size: 0.95rem;
		color: rgba(255, 255, 255, 0.5);
	}

	.contact-arrow {
		color: rgba(255, 255, 255, 0.4);
		transition: transform 0.3s ease;
		display: flex;
		align-items: center;
	}

	.contact-card:hover .contact-arrow {
		transform: translateX(10px);
		color: rgba(255, 255, 255, 0.8);
	}

	@media (max-width: 768px) {
		.contact-section {
			padding: 4rem 1.5rem;
		}

		.section-subtitle {
			font-size: 1rem;
			margin-bottom: 3rem;
		}

		.contact-card {
			flex-direction: column;
			text-align: center;
			padding: 2rem;
			gap: 1.5rem;
		}

		.contact-card:hover {
			transform: translateY(-5px);
		}

		.contact-arrow {
			display: none;
		}

		.contact-icon {
			margin: 0 auto;
		}

		.contact-name {
			font-size: 1.3rem;
		}

		.contact-value {
			font-size: 1rem;
		}
	}
</style>
