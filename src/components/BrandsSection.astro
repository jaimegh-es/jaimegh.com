---
const brands = [
	{
		name: 'Inled Group',
		logo: 'https://hosted.jaimegh.com/inled-logo-full.png',
		url: 'https://inled.es'
	},
	{
		name: 'TEA Friendly',
		logo: 'https://hosted.jaimegh.com/tea-friendly.png',
		url: 'https://teafriendly.es'
	}
];
---

<section class="brands-section" id="brands">
	<div class="section-container">
		<h2 class="section-title">Marcas</h2>
		<p class="section-subtitle">Marcas registradas de las que soy fundador y propietario</p>

		<div class="brands-grid">
			{brands.map(brand => (
				<a
					href={brand.url}
					class="brand-card"
					target="_blank"
					rel="noopener noreferrer"
					title={brand.name}
				>
					<div class="brand-logo-container">
						<img src={brand.logo} alt={brand.name} class="brand-logo" />
					</div>
					<div class="brand-glow"></div>
				</a>
			))}
		</div>
	</div>
</section>

<style>
	.brands-section {
		position: relative;
		z-index: 40;
		padding: 8rem 2rem;
		background: linear-gradient(180deg, rgba(10, 10, 10, 0.8) 0%, rgba(0, 0, 0, 0.5) 100%);
	}

	.section-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 300;
		text-align: center;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #888);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -1rem;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 2px;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.6);
		margin-bottom: 4rem;
	}

	.brands-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.brand-card {
		position: relative;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		padding: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 120px;
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		overflow: hidden;
	}

	.brand-card:hover {
		transform: translateY(-5px);
		border-color: rgba(255, 255, 255, 0.3);
		box-shadow:
			0 0 30px rgba(255, 255, 255, 0.1),
			0 15px 50px rgba(0, 0, 0, 0.5);
	}

	.brand-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 150%;
		height: 150%;
		background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
		transform: translate(-50%, -50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.brand-card:hover .brand-glow {
		opacity: 1;
	}

	.brand-logo-container {
		position: relative;
		z-index: 2;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.brand-logo {
		max-width: 100%;
		max-height: 60px;
		width: auto;
		height: auto;
		object-fit: contain;
		filter: grayscale(100%) brightness(200%);
		opacity: 0.7;
		transition: all 0.4s ease;
	}

	.brand-card:hover .brand-logo {
		filter: grayscale(0%) brightness(100%);
		opacity: 1;
		transform: scale(1.05);
	}

	@media (max-width: 768px) {
		.brands-section {
			padding: 4rem 1.5rem;
		}

		.brands-grid {
			grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
			gap: 1.5rem;
		}

		.brand-card {
			padding: 1.5rem;
			min-height: 100px;
		}

		.brand-logo {
			max-height: 50px;
		}
	}
</style>
