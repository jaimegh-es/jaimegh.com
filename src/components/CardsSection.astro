---
import { BookOpen, Rocket, Github, Linkedin } from 'lucide-astro';

const cards = [
	{
		title: 'Blog',
		description: 'Artículos sobre desarrollo, tecnología y más',
		url: '/blog',
		Icon: BookOpen
	},
	{
		title: 'Proyectos',
		description: 'Explora mis últimos trabajos y experimentos',
		url: '/proyectos',
		Icon: Rocket
	},
	{
		title: 'GitHub',
		description: 'Código abierto y repositorios',
		url: 'https://github.com/jaimegh-es',
		Icon: Github
	},
	{
		title: 'LinkedIn',
		description: 'CV profesional',
		url: 'https://es.linkedin.com/in/jaimegonzalezherraiz',
		Icon: Linkedin
	}
];
---

<section class="cards-section">
	<div class="cards-container">
		{cards.map(card => (
			<a href={card.url} class="card" target={card.url.startsWith('http') ? '_blank' : undefined} rel={card.url.startsWith('http') ? 'noopener noreferrer' : undefined}>
				<div class="card-glow"></div>
				<div class="card-content">
					<div class="card-icon">
						<card.Icon size={48} />
					</div>
					<h3 class="card-title">{card.title}</h3>
					<p class="card-description">{card.description}</p>
				</div>
				<div class="card-shine"></div>
			</a>
		))}
	</div>
</section>

<style>
	.cards-section {
		position: relative;
		z-index: 40;
		padding: 8rem 2rem;
		max-width: 1400px;
		margin: 0 auto;
	}

	.cards-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.card {
		position: relative;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		padding: 2.5rem;
		text-decoration: none;
		color: inherit;
		overflow: hidden;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
	}

	.card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.card:hover::before {
		opacity: 1;
	}

	.card-glow {
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.card:hover .card-glow {
		opacity: 1;
	}

	.card:hover {
		transform: translateY(-10px);
		border-color: rgba(255, 255, 255, 0.3);
		box-shadow:
			0 0 30px rgba(255, 255, 255, 0.1),
			0 20px 60px rgba(0, 0, 0, 0.5),
			inset 0 1px 0 rgba(255, 255, 255, 0.2);
	}

	.card-content {
		position: relative;
		z-index: 2;
	}

	.card-icon {
		margin-bottom: 1rem;
		color: rgba(255, 255, 255, 0.9);
		filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
	}

	.card-title {
		font-size: 1.8rem;
		font-weight: 600;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #ccc);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.card-description {
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.7);
		line-height: 1.6;
	}

	.card-shine {
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: linear-gradient(
			45deg,
			transparent 30%,
			rgba(255, 255, 255, 0.1) 50%,
			transparent 70%
		);
		transform: translateX(-100%);
		transition: transform 0.6s ease;
	}

	.card:hover .card-shine {
		transform: translateX(100%);
	}

	@media (max-width: 768px) {
		.cards-section {
			padding: 4rem 1.5rem;
		}

		.cards-container {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.card {
			padding: 2rem;
		}

		.card-title {
			font-size: 1.5rem;
		}
	}
</style>
