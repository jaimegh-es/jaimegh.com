---
import { getBlogPosts, createSlug } from '../lib/rss';
import { Calendar, ArrowRight } from 'lucide-astro';

const posts = await getBlogPosts();
const recentPosts = posts.slice(0, 6);
---

<section class="blog-section" id="blog">
	<div class="section-container">
		<h2 class="section-title">Blog</h2>
		<p class="section-subtitle">Últimas entradas y artículos</p>

		<div class="blog-grid">
			{recentPosts.map(post => {
				const slug = createSlug(post.title);
				const date = new Date(post.pubDate).toLocaleDateString('es-ES', {
					year: 'numeric',
					month: 'long',
					day: 'numeric'
				});

				return (
					<article class="blog-card">
						<a href={`/blog/${slug}`} class="blog-link">
							<div class="blog-card-content">
								<div class="blog-meta">
									<Calendar size={16} />
									<time datetime={post.isoDate}>{date}</time>
								</div>
								<h3 class="blog-title">{post.title}</h3>
								<p class="blog-excerpt">{post.contentSnippet.slice(0, 150)}...</p>
								<div class="blog-read-more">
									<span>Leer más</span>
									<ArrowRight size={20} />
								</div>
							</div>
							<div class="blog-glow"></div>
						</a>
					</article>
				);
			})}
		</div>

		{posts.length > 6 && (
			<div class="view-all">
				<a href="/blog" class="view-all-btn">
					Ver todas las entradas
					<ArrowRight size={20} />
				</a>
			</div>
		)}
	</div>
</section>

<style>
	.blog-section {
		position: relative;
		z-index: 40;
		padding: 8rem 2rem;
		background: linear-gradient(180deg, rgba(5, 5, 5, 0.9) 0%, rgba(0, 0, 0, 0.5) 100%);
	}

	.section-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 300;
		text-align: center;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #888);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -1rem;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 2px;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.6);
		margin-bottom: 4rem;
	}

	.blog-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.blog-card {
		position: relative;
		height: 100%;
	}

	.blog-link {
		display: block;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.blog-card-content {
		height: 100%;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		padding: 2rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
	}

	.blog-card-content::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.blog-card:hover .blog-card-content {
		transform: translateY(-8px);
		border-color: rgba(255, 255, 255, 0.3);
		box-shadow:
			0 0 30px rgba(255, 255, 255, 0.1),
			0 15px 50px rgba(0, 0, 0, 0.5);
	}

	.blog-card:hover .blog-card-content::before {
		opacity: 1;
	}

	.blog-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 150%;
		height: 150%;
		background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
		transform: translate(-50%, -50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.blog-card:hover .blog-glow {
		opacity: 1;
	}

	.blog-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: rgba(255, 255, 255, 0.5);
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.blog-title {
		font-size: 1.5rem;
		font-weight: 400;
		color: rgba(255, 255, 255, 0.9);
		margin-bottom: 1rem;
		line-height: 1.4;
	}

	.blog-excerpt {
		color: rgba(255, 255, 255, 0.6);
		line-height: 1.6;
		margin-bottom: 1.5rem;
		flex: 1;
	}

	.blog-read-more {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: rgba(255, 255, 255, 0.8);
		font-size: 1rem;
		transition: gap 0.3s ease;
	}

	.blog-card:hover .blog-read-more {
		gap: 1rem;
	}

	.view-all {
		display: flex;
		justify-content: center;
		margin-top: 3rem;
	}

	.view-all-btn {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem 2rem;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		font-size: 1.1rem;
		transition: all 0.3s ease;
	}

	.view-all-btn:hover {
		border-color: rgba(255, 255, 255, 0.4);
		box-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
		transform: translateY(-2px);
		gap: 1rem;
	}

	@media (max-width: 768px) {
		.blog-section {
			padding: 4rem 1.5rem;
		}

		.blog-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.blog-card-content {
			padding: 1.5rem;
		}

		.blog-title {
			font-size: 1.3rem;
		}
	}
</style>
