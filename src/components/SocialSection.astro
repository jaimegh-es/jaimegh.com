---
import {
	Github,
	Linkedin,
	Twitter,
	Instagram,
	Youtube,
	Twitch,
} from "lucide-astro";

const socialLinks = [
	{
		name: "GitHub",
		username: "@jaimegh-es",
		url: "https://github.com/jaimegh-es",
		Icon: Github,
		color: "rgba(255, 255, 255, 0.9)",
	},
	{
		name: "LinkedIn",
		username: "Jaime González Herráiz",
		url: "https://es.linkedin.com/in/jaimegonzalezherraiz",
		Icon: Linkedin,
		color: "#0A66C2",
	},
	{
		name: "Suno",
		username: "@songbird_music",
		url: "https://suno.com/@songbird_music",
		imageSrc: "https://hosted.jaimegh.com/suno.png",
		color: "#ff4929",
	},
	/*{
		name: 'Instagram',
		username: '@jaimegh',
		url: 'https://instagram.com/jaimegh',
		Icon: Instagram,
		color: '#E4405F'
	},
	{
		name: 'YouTube',
		username: 'JaimeGH',
		url: 'https://youtube.com/@jaimegh',
		Icon: Youtube,
		color: '#FF0000'
	},
	{
		name: 'Twitch',
		username: 'jaimegh',
		url: 'https://twitch.tv/jaimegh',
		Icon: Twitch,
		color: '#9146FF'
	}*/
];
---

<section class="social-section" id="social">
	<div class="section-container">
		<h2 class="section-title">Redes Sociales</h2>
		<p class="section-subtitle">Por aquí estoy</p>

		<div class="social-grid">
			{
				socialLinks.map((social) => (
					<a
						href={social.url}
						class="social-card"
						target="_blank"
						rel="noopener noreferrer"
						style={`--social-color: ${social.color}`}
					>
						<div class="social-icon">
							{social.Icon ? (
								<social.Icon size={48} />
							) : (
								<img src={social.imageSrc} alt={social.name} />
							)}
						</div>
						<div class="social-info">
							<h3 class="social-name">{social.name}</h3>
							<p class="social-username">{social.username}</p>
						</div>
						<div class="social-glow" />
					</a>
				))
			}
		</div>
	</div>
</section>

<style>
	.social-section {
		position: relative;
		z-index: 40;
		padding: 8rem 2rem;
		background: linear-gradient(
			180deg,
			rgba(0, 0, 0, 0.5) 0%,
			rgba(5, 5, 5, 0.9) 100%
		);
	}

	.section-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 300;
		text-align: center;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #888);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.section-title::after {
		content: "";
		position: absolute;
		bottom: -1rem;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 2px;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.5),
			transparent
		);
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.6);
		margin-bottom: 4rem;
	}

	.social-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.social-card {
		position: relative;
		background: rgba(20, 20, 20, 0.6);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		padding: 2rem;
		display: flex;
		align-items: center;
		gap: 1.5rem;
		text-decoration: none;
		color: inherit;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		overflow: hidden;
	}

	.social-card:hover {
		transform: translateY(-8px);
		border-color: var(--social-color);
		box-shadow:
			0 0 30px color-mix(in srgb, var(--social-color) 30%, transparent),
			0 15px 50px rgba(0, 0, 0, 0.5);
	}

	.social-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 150%;
		height: 150%;
		background: radial-gradient(
			circle,
			color-mix(in srgb, var(--social-color) 20%, transparent) 0%,
			transparent 70%
		);
		transform: translate(-50%, -50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.social-card:hover .social-glow {
		opacity: 1;
	}

	.social-icon {
		color: rgba(255, 255, 255, 0.8);
		filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
		transition: all 0.4s ease;
		position: relative;
		z-index: 2;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.social-icon img {
		width: auto;
		height: 30px;
		object-fit: contain;
	}

	.social-card:hover .social-icon {
		color: var(--social-color);
		filter: drop-shadow(0 0 15px var(--social-color));
		transform: scale(1.1) rotate(5deg);
	}

	.social-info {
		flex: 1;
		position: relative;
		z-index: 2;
	}

	.social-name {
		font-size: 1.5rem;
		font-weight: 400;
		color: rgba(255, 255, 255, 0.9);
		margin-bottom: 0.25rem;
		transition: color 0.3s ease;
	}

	.social-card:hover .social-name {
		color: var(--social-color);
	}

	.social-username {
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.6);
	}

	@media (max-width: 768px) {
		.social-section {
			padding: 4rem 1.5rem;
		}

		.social-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.social-card {
			padding: 1.5rem;
		}

		.social-icon {
			font-size: 2rem;
		}

		.social-name {
			font-size: 1.3rem;
		}
	}
</style>
